<%= content_for(:breadcrumbs) do -%>
    <li><span class="divider">/</span><%= link_to "Semesters", semesters_path %></li>
<% end -%>

<div class="page-header">
    <div class="btn-toolbar pull-right">
        <div class="btn-group">
            <%= link_to icon('folder-open', 'New Semester'), new_semester_path, :class => 'btn' %>
        </div>
    </div>
    <h1>Semesters</h1>
</div>

<% if @semesters.present? %>
    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Year</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Non teaching week</th>
        <th>Mid semester break</th>
        <th>Actions</th>
      </tr>

        <% @semesters.each do |semester| %>
          <tr>
            <td><%= semester.name %></td>
            <td><%= semester.year %></td>
            <td><%= semester.start %></td>
            <td><%= semester.end %></td>
            <td><%= semester.non_teaching_week %></td>
            <td><%= semester.mid_semester_break %></td>
            <td>
                <%= link_to 'View', semester_path(semester), :class => 'btn btn-mini' %>
                <%= link_to 'Edit', edit_semester_path(semester), :class => 'btn btn-mini btn-primary' %>
            </td>
          </tr>
        <% end %>
    </table>
<% else %>
    <p>No semesters in this listing.</p>
<% end %>


<br />