<% if f.object.errors.any? -%>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert" href="#"></a>
    <h4 class="alert-heading">Please fix the following errors and submit again!</h4>
    <a class="close" data-dismiss="alert" href="#">x</a>
    <br />
    <% f.object.errors.each do |name, msg| %>
      <p><%= name %>:&nbsp;<%= msg %></p>
    <% end %>
    <%# f.object.assessment_tasks.map { | t | t.errors.full_messages }.flatten.each do |msg| %>
      <!-- <p><%#= msg %></p> -->
    <%# end %>
      <% f.object.assessment_tasks.each do |task| %>
        <% if task.errors.present? %>
      	  <p><strong><i>Assessment Task: <%= task.title %>:</strong></i></p>
          <% task.errors.each do |name, msg| %>
            <p><%= name %>:&nbsp;<%= msg %></p>
          <% end %>
        <% end %>
      <% end %>
  </div>
<% end %>