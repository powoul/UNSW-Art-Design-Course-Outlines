<%= content_for(:breadcrumbs) do -%>
	<li><span class="divider">/</span><%= link_to "Courses", courses_path %></li>
    <li><span class="divider">/</span>New Course</li>
<% end -%>

<% modal_class = Course %>
<div class="page-header">
	<h1>New Course</h1>
</div>

<%= simple_form_for @course do |f| %>

	<% if f.object.errors.any? -%>
	  <div class="alert alert-error">
	    <a class="close" data-dismiss="alert" href="#"></a>
	    <h4 class="alert-heading">Please fix the following errors and submit again!</h4>
	    <a class="close" data-dismiss="alert" href="#">x</a>
	    <br />
	    <% f.object.errors.each do |name, msg| %>
			<p><%= name %> => <%= msg %></p>
		<% end %>
	  </div>
	<% end %>

	<%= render :partial => 'courses/new_form', :locals => { :f => f } %>
	<br />
	<div class="form-actions" style="text-align: center;">
	    <%= f.submit "Create Course", :class => 'btn btn-primary' %>
	    <%= link_to "Cancel", courses_path, :class => 'btn' %>
	</div>
<% end %>