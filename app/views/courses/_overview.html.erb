<div class="view-items">
	<h3>Course Summary</h3>
	<%= @course.summary.present? ? @course.summary.html_safe : '' %>
</div>

<div class="view-items">

	<div class="view-items">
		<h3>PROGRAM AFFILIATION</h3>
	</div>	

	<div class="view-items">
		<b>Affiliated Program: </b>
		<%= @course.program.present? ? @course.program.try(:number_with_description) : '' %>
	</div>

	<div class="view-items">
		<b>Program Director:</b>
		<%= @course.program.director.present? ? @course.program.director.user.fullname : '' %>
	</div>

</div>

<div class="view-items">
	<h3>Course Aims</h3>
	<p><%= @course.course_aims.present? ? @course.course_aims.html_safe : '' %></p>
</div>

<div class="view-items">
	<h3>STUDENT LEARNING OUTCOMES</h3>
	<p class="view-items">On completion of this course, the student should be able to:</p>

	<% if @course.course_learning_outcomes.present? %>
		<ol>
			<% @course.course_learning_outcomes.each do |outcome| %>
				<li><%= outcome.name.present? ? outcome.name.html_safe : '' %></li>
			<% end %>
		</ol>
	<% else %>
		<p>&nbsp;</p>
	<% end %>
</div>

<h3>TEACHING STRATEGIES AND APPROACH TO LEARNING</h3>

<% if @course.teaching_strategy.present?  %>

	<% if @course.teaching_strategy.lectures == true %>	
		<div class="view-items">
			<b>Lectures</b>
		</div>
		<div>
			<p><%= @course.teaching_strategy.lectures_description.present? ? @course.teaching_strategy.lectures_description.html_safe : '' %></p>
		</div>		
	<% end %>

	<% if @course.teaching_strategy.seminars == true %>
		<div class="view-items">
			<b>Seminars</b>
		</div>
		<div>
			<p><%= @course.teaching_strategy.seminars_description.present? ? @course.teaching_strategy.seminars_description.html_safe : '' %></p>
		</div>
	<% end %>

	<% if @course.teaching_strategy.tutorials == true %>
		<div class="view-items">
			<b>Tutorials</b>
		</div>
		<div>
		<p><%= @course.teaching_strategy.tutorials_description.present? ? @course.teaching_strategy.tutorials_description.html_safe : ''.html_safe %></p>
		</div>
	<% end %>

	<% if @course.teaching_strategy.studio == true %>
		<div class="view-items">
			<b>Studio</b>
		</div>
		<div>
			<p><%= @course.teaching_strategy.studio_description.present? ? @course.teaching_strategy.studio_description.html_safe : ''.html_safe %></p>
		</div>
	<% end %>

	<% if @course.teaching_strategy.blended_online == true %>
		<div class="view-items">
			<b>Blended/online</b>
		</div>
		<div>
			<p><%= @course.teaching_strategy.blended_online_description.present? ? @course.teaching_strategy.blended_online_description.html_safe : ''.html_safe %></p>
		</div>
	<% end %>
	</dl>

	<b>Teaching Philosophy</b>
	<p><%= @course.teaching_strategy.teaching_philosophy.present? ? @course.teaching_strategy.teaching_philosophy.html_safe : ''.html_safe %></p>
<% else %>		
	&nbsp;
<% end %>