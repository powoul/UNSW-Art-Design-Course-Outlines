<% if @course.assessment_tasks.present? %>
	<% @course.assessment_tasks.each_with_index do |assessment, index| %>
		<h2>Assessment Task <%= (index + 1).to_s %></h2>
		<dl class="dl-horizontal">
			<dt>Title</dt>
			<dd><%= assessment.title.present? ? assessment.title : '<i>undefined</i>'.html_safe %></dd>			

			<dt>Weighting</dt>
			<dd><%= assessment.weighting.present? ? assessment.weighting : '<i>undefined</i>'.html_safe %></dd>

			<h4>Due Date(s)</h4>
			<% if assessment.assessment_dates.present? %>
				<div>
					<% assessment.assessment_dates.each do |due_date| %>
						<dt style="text-align: right;">Description</dt>
						<dd><%= due_date.description.present? ? due_date.description : '<i>undefined</i>'.html_safe %></dd>
						<dt style="text-align: right;">Week</dt>
						<dd><%= due_date.due.present? ? week_number(@course, due_date.due) : '<i>undefined</i>'.html_safe %></dd>
					<% end %>
				</div>				
			<% else %>
				<dt>&nbsp;</dt>
				<dd><i>undefined</i></dd>
			<% end %>
		</dl>

		<h4>Assessment Synopsis</h4>
		<p><%= assessment.synopsis.present? ? assessment.synopsis.html_safe : '<i>undefined</i>'.html_safe %></p>

		<% if assessment.criteria.present? %>
			<h4>Assessment Criteria With Marking Rubric</h4>
			<table class="table table-bordered">
			    <thead>
			      <tr>
			        <th>Criteria</th>
			        <th>FAIL</th>
			        <th>PASS</th>
			        <th>CREDIT</th>
			        <th>DISTINCTION</th>
			        <th>HIGH DISTINCTION</th>
			      </tr>
			    </thead>

			    <tbody> 
			      <%= render :partial => "criteria/row", :collection => assessment.criteria, :as => :criterion %>
			    </tbody>
			</table>
		<% end %>

		<dl class="dl-horizontal">
			<h4>Course Learning Oucomes addressed in this task:</h4>
			<% if assessment.task_outcomes.present? %>
				<% assessment.task_outcomes.each do |outcome| %>
					<dt>&nbsp;</dt>
					<dd><%= outcome.name.present? ? outcome.name.html_safe : '<i>undefined</i>'.html_safe %></dd>
				<% end %>
			<% else %>
				<dt>&nbsp;</dt>
				<dd><i>undefined</i></dd>
			<% end %>

			<% if assessment.assessment_task_resources.present? %>
				<h4>Resources required for this task:</h4>
				<% assessment.assessment_task_resources.each do |resource| %>
					<dt>Resource</dt>
					<dd><%= resource.resource.present? ? resource.resource.html_safe : '<i>undefined</i>'.html_safe %></dd>
					<dt>Technical Staff</dt>
					<dd><%= resource.technical_staff.present? ? resource.technical_staff.member_name : '<i>undefined</i>'.html_safe %></dd>
				<% end %>
			<% end %>

			<br />
			<% if assessment.assessment_task_proficiencies.present? %>
				<h4>Proficiencies required for this task:</h4>
				<% assessment.assessment_task_proficiencies.each do |proficiency| %>
					<dt>&nbsp;</dt>
					<dd><%= proficiency.proficiency.present? ? proficiency.proficiency.html_safe : '<i>undefined</i>'.html_safe %></dd>
				<% end %>
			<% end %>
		</dl>
		
		<h4>Feedback strategy for this task:</h4>
		<p><%= assessment.feedback.present? ? assessment.feedback.html_safe : '<i>undefined</i>'.html_safe %></p>
		<% end %>
	
<% else %>
	<i>undefined</i>
<% end %>
